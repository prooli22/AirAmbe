<Window x:Class="AirAmbe.EcranConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirAmbe"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Air-Ambe" Height="240" Width="300">
    <Grid>
        <Label Width="Auto" Height="30" FontSize="12" FontWeight="Bold" Foreground="Red" Margin="0, 0, 0, 70" HorizontalAlignment="Center" VerticalAlignment="Top">! ATTENTION !</Label>
        <TextBlock Width="250" Height="70" FontSize="12" Margin="22,30,22,0" Padding="5" HorizontalAlignment="Center" VerticalAlignment="top">Vous avez selectionné une piste qui sera peut-<LineBreak/>être utilisée par un autre avion au même<LineBreak/>moment. Vous êtes conscient que ce geste<LineBreak/>peut engendrer une collision.</TextBlock>
        <Label Name="lblMDP" Width="Auto" Height="30" FontSize="12" Margin="0, 0, 0, 70" HorizontalAlignment="Center" VerticalAlignment="Bottom">Entrez votre mot de passe pour confirmer</Label>
        <PasswordBox Name="txtPassword" Width="250" Height="25" Margin="0, 0, 0, 40" HorizontalAlignment="Center" VerticalAlignment="Bottom" BorderThickness="2" KeyDown="txtPassword_KeyDown"></PasswordBox>
        <Button Name="btnConfirmation" Width="75" Height="25" Content="Confirmer" Margin="0, 0, 0, 10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnConfirmation_Click"></Button>
    </Grid>
</Window>
